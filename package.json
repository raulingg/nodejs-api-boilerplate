{
  "name": "products-api-challenge",
  "version": "1.0.0",
  "description": "a RESTful API to manage products information built with Express and Postgres following SOLID principles and best practices.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/bin/www.ts",
    "start": "npm run build && cross-env NODE_ENV=development node dist/bin/www.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsc -p ./tsconfig.build.json",
    "mtgen": "mtgen"
  },
  "author": "Raul Quispe <relaxedchild@gmail.com>",
  "license": "ISC",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.12.1",
    "celebrate": "^15.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^4.6.0",
    "mongoose": "^6.12.0",
    "pino": "^8.15.1",
    "pino-http": "^8.5.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/express-pino-logger": "^4.0.3",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6",
    "@typescript-eslint/parser": "^6",
    "axios": "^0.27.2",
    "cross-env": "^7.0.3",
    "docker-compose": "^0.23.19",
    "dotenv-cli": "^4.1.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "is-port-reachable": "^3.1.0",
    "jest": "^29.6.4",
    "mongoose-tsgen": "^9.2.7",
    "pino-pretty": "^10.2.0",
    "prettier": "2.6.2",
    "supertest": "^6.1.6",
    "ts-jest": "^29.1.1",
    "tsx": "^3.12.10",
    "typescript": "^5.2.2"
  }
}
